<header class="{% if section.settings.enable_sticky_header %}sticky-header{% endif %}">
  <div class="container">
    <div class="logo">
      <a href="/">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
        {% else %}
          <img src="{{ 'saudi1.png' | asset_url }}" alt="{{ shop.name }}">
        {% endif %}
      </a>
    </div>
    
    <button class="mobile-menu-toggle" aria-label="{{ 'general.navigation.menu' | t }}">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    
    <nav>
      <ul>
        {% for link in section.settings.menu.links %}
          {% if link.links.size > 0 %}
            <li class="dropdown">
              <a href="{{ link.url }}" class="dropdown-toggle">
                {{ link.title }} <i class="fas fa-chevron-down"></i>
              </a>
              <ul class="dropdown-menu">
                {% for child_link in link.links %}
                  <li>
                    <a href="{{ child_link.url }}" {% if child_link.active %}class="active"{% endif %}>
                      {{ child_link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% else %}
            <li>
              <a href="{{ link.url }}" {% if link.active %}class="active"{% endif %}>
                {{ link.title }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
        
        <li class="theme-toggle">
          <button id="theme-toggle-btn" aria-label="{{ 'general.theme.toggle' | t }}">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
            <span>{{ 'general.theme.dark_mode' | t }}</span>
          </button>
        </li>
      </ul>
    </nav>
  </div>
</header>

<div class="menu-overlay"></div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "label": "Enable sticky header",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %} 