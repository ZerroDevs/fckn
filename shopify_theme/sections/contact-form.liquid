<section class="contact" id="contact">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-description">{{ section.settings.description }}</p>
    
    <div class="contact-content">
      <div class="contact-form">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="form-success">
              {{ section.settings.success_message }}
            </div>
          {% endif %}
          
          {% if form.errors %}
            <div class="form-error">
              {{ section.settings.error_message }}
            </div>
          {% endif %}
          
          <div class="form-group">
            <input type="text" name="contact[name]" id="ContactFormName" placeholder="{{ section.settings.name_placeholder }}" value="{{ form.name }}" required>
          </div>
          
          <div class="form-group">
            <input type="email" name="contact[email]" id="ContactFormEmail" placeholder="{{ section.settings.email_placeholder }}" value="{{ form.email }}" required>
          </div>
          
          <div class="form-group">
            <input type="tel" name="contact[phone]" id="ContactFormPhone" placeholder="{{ section.settings.phone_placeholder }}" value="{{ form.phone }}">
          </div>
          
          <div class="form-group">
            <textarea name="contact[body]" id="ContactFormMessage" placeholder="{{ section.settings.message_placeholder }}" rows="5" required>{{ form.body }}</textarea>
          </div>
          
          <button type="submit" class="submit-btn">
            {{ section.settings.submit_text }}
          </button>
        {% endform %}
      </div>
      
      <div class="contact-info">
        <div class="social-media">
          {% if section.settings.whatsapp_number != blank %}
            <a href="https://wa.me/{{ section.settings.whatsapp_number | remove: '+' }}" target="_blank" class="whatsapp">
              <i class="fab fa-whatsapp"></i>
            </a>
          {% endif %}
          
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" class="facebook">
              <i class="fab fa-facebook-f"></i>
            </a>
          {% endif %}
          
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank" class="twitter">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
          
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" class="instagram">
              <i class="fab fa-instagram"></i>
            </a>
          {% endif %}
        </div>
        
        {% if section.settings.phone_number != blank %}
          <div class="info-item">
            <i class="fas fa-phone-alt"></i>
            <h3>{{ section.settings.phone_title }}</h3>
            <p>{{ section.settings.phone_number }}</p>
          </div>
        {% endif %}
        
        {% if section.settings.email != blank %}
          <div class="info-item email-item">
            <i class="fas fa-envelope"></i>
            <h3>{{ section.settings.email_title }}</h3>
            <p>{{ section.settings.email }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

